<main>
      <p id="notice"></p>
      <div class="container px-5 px-sm-0">
          <div class="row">
              <div class="col-md-3">
                  <h2>User info</h2>
                 <%= image_tag @user.get_profile_image(100,100) %>
                  <table class="table">
                      <tbody>
                          <tr>
                              <th>name</th>
                              <th><%= @user.name %></th>
                          </tr>
                          <tr>
                              <th>introduction</th>
                          </tr>
                      </tbody>
                   </table>
                   <div class="row">
                       <%= link_to edit_user_path(current_user),class:"btn-block edit_user_#{@user.id} btn btn-outline-secondary" do %>
                <i class="fas fa-user-cog"></i>
                <% end %>
                    </div>
                    <h2 class="mt-3">New book</h2>
                    <%= form_with model: Book.new do |f| %>
                     <div class="form-group">
                      <label for="book_title">Title</label>
                       <%= f.text_field :title,class: "form-control book_title" %>
                      </div>
                      <div class="form-group">
                      <label for="book_opinion">Opinion</label>
                      <%= f.text_field :body,class: "form-control book_body" %>
                      </div>
                      <div class="form-group">
                      <%= f.submit 'Create Book',class:"btn btn-success" %>
                    </div>s
                    <% end %>
                 </div>
                      <div class="col-md-8 offset-md-1">
                    <h2>Book detail</h2>
                    <tbody>

                      <tr>
                       <td><%= image_tag @books.user.get_profile_image(100,100)  %></td>
                        <td><%= @books.user.name%></td>
                         <td><%= @books.title %></td>
                         <td><%= @books.body %></td>
                         <td><%= link_to"Destroy",book_path(@books.id),method: :delete,"data-confirm" => "本当に削除しますか？" %></td>
                       </tr>
                    </tbody>
                     </div>
                </div>
              </div>
</main>