
<body>
 <main>
      <p id="notice"></p>
      <div class="container px-5 px-sm-0">
          <div class="row">
              <div class="col-md-3">
                  <h2>User info</h2>
                 <%= image_tag @user.get_profile_image(100,100) %>
                  <table class="table">
                      <tbody>
                          <tr>
                              <th>name</th>
                              <th>yuki</th>
                          </tr>
                          <tr>
                              <th>introduction</th>
                          </tr>
                      </tbody>
                   </table>
                   <div class="row">
                       <a class="btn btn-outline-secondary btn-block edit_user_74827" href="/users/74827/edit">
                           <i class="fas fa-user-cog"></i>
                       </a>
                    </div>
                    <h2 class="mt-3">New book</h2>
                    <%= form_with model: Book.new do |f| %>
                    <div class="form-group">
                      <h6>Title</h6>
                       <%= f.text_field :title %>
                      </div>
                      <div class="form-group">
                      <h6>Opinion</h6>
                      <%= f.text_field :body %>
                      </div>
                      <div class="form-group">
                      <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
                    </div>
                    <% end %>

                    <h2>Book detail</h2>
                    <tbody>

                      <tr>
                         <td><%= @books.title %></td>
                         <td><%= @books.body %></td>

                        <td><%= image_tag @books.user.get_profile_image(80,80)  %></td>
                        <td><%= @books.user.name%></td>

                       </tr>
                    </tbody>

                </div>
              </div>
           </div>
      </main>
</body>